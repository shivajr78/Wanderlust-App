<% layout("layouts/boilerplate") %>
    <style>
        .offer {
            text-align: center;
            height: 55px;
            background-color: crimson;
            margin-top: 5px;
            color: white;
            font-weight: 500;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        .btn-close button {
           padding-bottom: 35px;
           color: white;
        }
        
        .section-two h1 {
            text-align: center;
        }

        .image-two img {
            height: 100%;
            width: 100%;
        }

        .section-one {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            padding-left: 15%;
            padding-right: 20%;
        }

        .item-one h1 {
            color: crimson;
            font-weight: 900;
        }

        .item-one h2 {
            font-weight: 900;
        }

        .price {
            font-size: 4rem;
            font-weight: 900;
        }

        .cell {
            width: 90%;
            display: flex;
            justify-content: center;
            padding-left: 10%;
        }

        .para {
            margin-left: 10px;
        }

        .search-cell {
            display: flex;
            justify-content: space-between;
            height: 55px;
            width: 80%;
            border: 2px solid rgb(157, 154, 154);
            border-radius: 12px;
            padding: 3px 20px 8px 15px;
        }

        .search-cell i {
            color: crimson;
            font-size: 1.5rem;
            margin-top: 12px;
            margin-right: 12px;
        }

        .item-two {
            margin-top: 10px;
        }

        .item-two img {
            width: 300px;
            height: auto;
            border-radius: 15px;
        }

        .HomeBtn {
            color: crimson;
            background-color: white;
            margin-top: 18px;
        }

        .HomeBtn:hover {
            background-color: crimson;
        }

        /* .explore {
            margin-top: 10px;
            border: 0.6px solid rgba(0, 0, 0, 0.577);
            border-radius: 10px;
            padding: 8px 0px 8px 6px;
        } */
        .explore {
            margin-bottom: 8px;
        }

        .explore a {
            text-decoration: none;
            color: crimson;
            font-size: 1rem;

        }


        .section-three {
            display: flex;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            margin-top: 90px;
        }

        .section-three h2 {
            text-align: center;
        }

        .image {

            text-align: center;
        }


        .row-card {
            display: flex;
            justify-content: space-between;
            height: 100px;
            width: 90%;
            border: 1px solid crimson;
            border-radius: 15px;
            align-items: center;
            padding: 10px 30px 0 30px;
            margin-left: 5%;
        }

        .logBtn {
            height: 40px;
            border: 1px solid crimson;
            border-radius: 10px;
            background-color: crimson;
            text-align: center;
            padding: 6px 15px 6px 15px;
        }

        .logBtn a {
            text-decoration: none;
            color: white;
            font-weight: 500;
        }

        .signUpBtn {
            height: 40px;
            border: 1px solid crimson;
            border-radius: 10px;
            background-color: crimson;
            text-align: center;
            padding-top: 6px;
        }

        .signUpBtn a {
            text-decoration: none;
            color: white;
            font-weight: 500;
        }






        @media screen and (max-width: 995px) {
            .item-two {
                display: none;
            }

            .search-cell {
                height: 65px;
                width: 80%;
            }
        }

        @media screen and (max-width: 773px) {
            .search-cell {
                height: 60px;
                width: 85%;
            }
        }

        @media screen and (max-width: 526px) {
            .search-cell {
                height: 55px;
                width: 90%;
            }
        }

        @media screen and (max-width: 500px) {
            .search-cell {
                height: 120px;
                width: 90%;
            }
        }

        @media screen and (max-width: 544px) {
            .image img {
                width: 250px;
                height: auto;
            }
        }


        @media screen and (max-width: 830px) {
            .row-card {
                height: 130px;
                display: flex;
                flex-direction: column;
                padding-bottom: 120px;
            }

            .logBtn a {
                padding-bottom: 15px;
            }


        }

        @media screen and (max-width: 582px) {
            .row-card {
                height: 160px;
                display: flex;
                flex-direction: column;
                padding-bottom: 50px;
            }

            .logBtn a {
                padding-bottom: 15px;
            }
        }

        @media screen and (max-width: 425px) {
            .para p {
                font-size: 0.7rem;
            }

            .para h5 {
                font-size: 0.9rem;
            }

        }
    </style>

