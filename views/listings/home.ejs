<% layout("layouts/boilerplate") %>
    <style>
        .section-two h1 {
            text-align: center;
        }

        .image-two img {
            height: 100%;
            width: 100%;
        }

        .section-one {
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
            padding-left: 15%;
            padding-right: 20%;
        }

        .item-one h1 {
            color: crimson;
            font-weight: 900;
        }

        .item-one h2 {
            font-weight: 900;
        }

        .price {
            font-size: 4rem;
            font-weight: 900;
        }

        .cell {
            width: 90%;
            display: flex;
            justify-content: center;
            padding-left: 10%;
        }

        .para {
            margin-left: 10px;
        }

        .search-cell {
            display: flex;
            justify-content: space-between;
            height: 55px;
            width: 80%;
            border: 2px solid rgb(157, 154, 154);
            border-radius: 12px;
            padding: 3px 20px 8px 15px;
        }



        .search-cell i {
            color: crimson;
            font-size: 1.5rem;
            margin-top: 12px;
            margin-right: 12px;
        }

        /* .item-two {
            margin-top: 40px;
