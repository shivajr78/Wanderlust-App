        .explore {
            margin-bottom: 8px;
        }

        .explore a {
            text-decoration: none;
            color: crimson;
            font-size: 1rem;

        }


        .section-three {
            display: flex;
            justify-content: center;
            flex-direction: column;
            text-align: center;
            margin-top: 90px;
        }

        .section-three h2 {
            text-align: center;
        }

        .image {

            text-align: center;
        }


        .row-card {
            display: flex;
            justify-content: space-between;
            height: 100px;
            width: 90%;
            border: 1px solid crimson;
            border-radius: 15px;
            align-items: center;
            padding: 10px 30px 0 30px;
            margin-left: 5%;
        }

        .logBtn {
            height: 40px;
            border: 1px solid crimson;
            border-radius: 10px;
            background-color: crimson;
            text-align: center;
            padding: 6px 15px 0px 15px;
        }

        .logBtn a {
            text-decoration: none;
            color: white;
            font-weight: 500;
        }

        .signUpBtn {
            height: 40px;
            border: 1px solid crimson;
            border-radius: 10px;
            background-color: crimson;
            text-align: center;
            padding-top: 6px;
        }

        .signUpBtn a {
            text-decoration: none;
            color: white;
            font-weight: 500;
        }

        .signUpBtn2{
            display: none;
            margin-left: 15px;
        }
        .Btns{
            display: flex;
            justify-content: space-evenly;
            
        }

    

        @media screen and (max-width: 995px) {
            .item-two {
                display: none;
            }

            .search-cell {
               height: 65px;
               width: 80%;
            }
        }
        @media screen and (max-width: 773px) {
            .search-cell {
                height: 60px;
                width: 85%;
            }
        }
        @media screen and (max-width: 526px) {
            .search-cell {
                height: 55px;
               width: 90%;
            }
        }
        @media screen and (max-width: 500px) {
            .search-cell {
                height: 120px;
               width: 90%;
            }
        }

        @media screen and (max-width: 480px) {
            .image {
                display: none;
            }
        }


        @media screen and (max-width: 830px) {
            .row-card {
                height: 150px;
                display: flex;
                flex-direction: column;
                padding-bottom: 150px;
            }

            .Btns {
                margin-bottom: 10px;
                padding-bottom: 30px;
            }
            .signUpBtn2 {
                display: grid;
            }
        }
        @media screen and (max-width: 352px) {
            .row-card {
                height: 220px;
                display: flex;
                flex-direction: column;
                padding-bottom: 150px;
            }
        }

        @media screen and (max-width: 425px) {
            .para p {
                font-size: 0.7rem;
            }
            .para h5 {
                font-size: 0.9rem;
            }
           
        }
    </style>

