        } */

        .logo {
            color: rgb(39, 121, 221);
            font-size: 12rem;
            transform: rotate(180deg);
        }

        .HomeBtn {
            color: crimson;
            background-color: white;
            margin-top: 18px;
        }

        .HomeBtn:hover {
            background-color: crimson;
        }

        /* .explore {
            margin-top: 10px;
